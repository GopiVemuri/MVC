                    <button type="submit" class="btn btn-secondary w-30">Order Now</button>
                </div>
            }


        </div>
        <div class="col-lg-6 mt-4">
            <img src="~/Images/istockphoto-1421688556-612x612.jpg" class="sitebannerlogo img-responsive" style="float: right !important; width: 600px; height: 500px;" />

        </div>
    </div>
